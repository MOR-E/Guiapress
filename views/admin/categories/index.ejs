<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">
        Criar nova categoria!
    </a>
    <hr>    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
             <% categories.forEach(category => {  %>
                <tr>
                    <th><%=category.id%></th>
                    <th><%=category.title%></th>  
                    <th><%=category.slug%></th>
                    <th>
                        <button class="btn btn-warning" type ="submit">Editar</button>
                        <form action="/categories/delete" method="post" style="display: inline;" onsubmit="ConfirmarDelecao(event,this)" type ="submit">
                            <input type="hidden" name="id" value="<%- category.id%>">
                            <button class="btn btn-danger" type ="submit">Deletar</button>
                        </form>
                    </th>
                 </tr>
             <% }) %>
             
        </tbody>
    </table>
    
</div>

<%- include ('../../partials/footer.ejs'); %>

<script>
    document.querySelector('form').addEventListener('submit', confirmarDelecao)
    function confirmarDelecao(event, form) {
        event.preventDefault();
        var decision = confirm("Você quer excluir essa categoria?")
        if (decision){
            form.submit();
        }
    }
</script>