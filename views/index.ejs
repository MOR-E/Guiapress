<%- include ('./partials/header.ejs'); %>
<%- include ('./partials/homenavbar.ejs'); %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Esse é um simples blog do guia do programador.</p>
            <hr class="my-4">
            <p></p>
            <a class="btn btn-primary btn-lg" href="https://github.com/MOR-E" role="button">Saiba mais</a>
          </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ver artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float:right;" >Próximo</a>
                <hr>
            </div>
            <hr>
        </div>
    </div>
</body>
<%- include ('./partials/footer.ejs'); %>